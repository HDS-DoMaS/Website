{% if pageCount > 1 %}
<div class="pagination">
    {% if first is defined and current != first %}
        <span class="first">
            <a href="{{ path(route, query|merge({(pageParameterName): first})) }}" title="Seite {{ first }}">&lt;&lt;</a>
        </span>
    {% else %}
        <span class="disabled first">
            &lt;&lt;
        </span>
    {% endif %}

    {% if previous is defined %}
        <span class="previous">
            <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}" title="Seite {{ previous }}">&lt;</a>
        </span>
    {% endif %}

    {% if startPage > 1 %}
        <span>
            <a href="{{ path(route, query|merge({(pageParameterName): 1})) }}" title="Seite {{ 1 }}">1</a>
        </span>
        {% if startPage == 3 %}
            <span>
                <a href="{{ path(route, query|merge({(pageParameterName): 2})) }}" title="Seite {{ 2 }}">2</a>
            </span>
        {% elseif startPage != 2 %}
            <span class="disabled">
                <span>&hellip;</span>
            </span>
        {% endif %}
    {% endif %}

    {% for page in pagesInRange %}
        {% if page != current %}
            <span class="page">
                <a href="{{ path(route, query|merge({(pageParameterName): page})) }}" title="Seite {{ page }}">{{ page }}</a>
            </span>
        {% else %}
            <span class="current">{{ page }}</span>
        {% endif %}

    {% endfor %}

    {% if pageCount > endPage %}
        {% if pageCount > (endPage + 1) %}
            {% if pageCount > (endPage + 2) %}
                <span class="disabled">
                    <span>&hellip;</span>
                </span>
            {% else %}
                <span>
                    <a href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)})) }}" title="Seite {{ pageCount - 1 }}">{{ pageCount -1 }}</a>
                </span>
            {% endif %}
        {% endif %}
        <span>
            <a href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}" title="Seite {{ pageCount }}">{{ pageCount }}</a>
        </span>
    {% endif %}

    {% if next is defined %}
        <span class="next">
            <a href="{{ path(route, query|merge({(pageParameterName): next})) }}" title="Seite {{ next }}">&gt;</a>
        </span>
    {% endif %}

    {% if last is defined and current != last %}
        <span class="last">
            <a href="{{ path(route, query|merge({(pageParameterName): last})) }}" title="Seite {{ last }}">&gt;&gt;</a>
        </span>
    {% else %}
        <span class="disabled last">
            &gt;&gt;
        </span>
    {% endif %}
</div>
{% endif %}
