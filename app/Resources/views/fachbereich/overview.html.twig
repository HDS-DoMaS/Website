{% extends 'base.html.twig' %}

{% block body %}
    <h1>Fachbereiche</h1>

    {% for flash_message in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{ flash_message }}
        </div>
    {% endfor %}

    <table class="table table-striped table-bordered table-responsive">
            <tr>
                <th>#</th>
                <th>Fachbereich</th>
            </tr>
        {% for fachbereich in fachbereiche %}
            <tr>
                <td>
                    <a href="{{ path('_showFachbereich', {'fachbereichId': fachbereich.getFachbereichId()}) }}">
                        {{ fachbereich.getFachbereichId() }}
                    </a>
                </td>
                <td>
                    <a href="{{ path('_showFachbereich', {'fachbereichId': fachbereich.getFachbereichId()}) }}">
                        {{ fachbereich.getBezeichnung() }}
                    </a>
                </td>
            </tr>
        {% endfor %}
            <tr>
                <td colspan="2"><a href="{{ path('_neuFachbereich') }}">Neuer Fachbereich</a></td>
            </tr>
    </table>
{% endblock %}

