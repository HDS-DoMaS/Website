{% extends 'base.html.twig' %}

{% block body %}
    <h1>Studieng√§nge</h1>

    {% for flash_message in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{ flash_message }}
        </div>
    {% endfor %}

    <table class="table table-striped table-bordered table-responsive">
            <tr>
                <th>#</th>
                <th>Studiengang</th>
                <th>Fachbereich</th>
            </tr>
        {% for studiengang in studiengaenge %}
            <tr>
                <td>
                    <a href="{{ path('_showStudiengang', {'studiengangId': studiengang.getStudiengangId()}) }}">
                        {{ studiengang.getStudiengangId() }}
                    </a>
                </td>
                <td>
                    <a href="{{ path('_showStudiengang', {'studiengangId': studiengang.getStudiengangId()}) }}">
                        {{ studiengang.getBezeichnung() }}
                    </a>
                </td>
                <td>
                    <a href="{{ path('_showFachbereich', {'fachbereichId': studiengang.getStudiengangId()}) }}">
                        {{ studiengang.getFachbereich().getBezeichnung() }}
                    </a>
                </td>
            </tr>
        {% endfor %}
            <tr>
                <td colspan="3"><a href="{{ path('_neuStudiengang') }}">Neuer Studiengang</a></td>
            </tr>
    </table>
{% endblock %}

