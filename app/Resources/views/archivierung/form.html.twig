{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body %}
    <h1>{% block h1 %}Neue Archivierung{% endblock %}</h1>
    <div class="body container">
        {% for flash_message in app.session.flashBag.get('success') %}
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ flash_message }}
            </div>
        {% endfor %}

        <form class="form-horizontal" method="post" name="form">
            <div id="form">
                {% block archivId %}{% endblock %}
                <div class="form-group">
                    <label class="col-sm-2 control-label required" for="form_titel">Titel</label>
                    <div class="col-sm-10">
                        <input id="form_titel" class="form-control" type="text" required="required" name="form[titel]" value="{{ form.titel.vars.value }}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label required" for="form_autor">Autor</label>
                    <div class="col-sm-10">
                        Hier Autoren
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label required" for="form_fachbereich">Fachbereich & Studiengang</label>
                    <div class="col-sm-10">
                        <select id="form_fachbereich" class="form-control" required="required" name="form[fachbereich]">
                            {% for key,val in form.fachbereich.vars.choices %}
                                <option value="{{ val.value }}" {{  form.fachbereich.vars.value == '' and key==0 ? ' selected ' :(val.value == form.fachbereich.vars.value ? ' selected ' : '') }}>{{ val.label | trans }}</option>
                            {% endfor %}
                        </select>
                        <select id="form_studiengang" class="form-control" required="required" name="form[studiengang]">
                            {% for key,val in form.studiengang.vars.choices %}
                                <option value="{{ val.value }}" {{  form.studiengang.vars.value == '' and key==0 ? ' selected ' :(val.value == form.studiengang.vars.value ? ' selected ' : '') }}>{{ val.label | trans }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label required" for="form_beschreibung">Beschreibung</label>
                    <div class="col-sm-10">
                        <textarea id="form_beschreibung" class="form-control" required="required" name="form[beschreibung]">{{ form.beschreibung.vars.value }}</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label required" for="form_abgabedatum">Abgabedatum</label>
                    <div class="col-sm-10">
                        <input id="form_abgabedatum" class="form-control" type="text" value="{{ form.abgabedatum.vars.value }}" required="required" name="form[abgabedatum]">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label required" for="form_betreuer">Betreuer 1 & 2</label>
                    <div class="col-sm-10">
                        Hier Betreuer 1 & 2
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label required" for="form_unternehmen">Betreuendes Unternehmen</label>
                    <div class="col-sm-10">
                        Hier Unternehmen
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label required" for="form_dateiuploads">Dateiuploads</label>
                    <div class="col-sm-10">
                        Hier Dateiuploads
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label required" for="form_referenzen">Referenzen in DoMaS</label>
                    <div class="col-sm-10">
                        Hier Referenzen
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label required" for="form_dateiuploads">Keywords</label>
                    <div class="col-sm-10">
                        Hier Keywords
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label required" for="form_kategorie">Kategorie</label>
                    <div class="col-sm-10">
                        <select id="form_kategorie" class="form-control" required="required" name="form[kategorie]">
                            {% for key,val in form.kategorie.vars.choices %}
                                <option value="{{ val.value }}" {{  form.kategorie.vars.value == '' and key==0 ? ' selected ' :(val.value == form.kategorie.vars.value ? ' selected ' : '') }}>{{ val.label | trans }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-10">
                        <button id="form_speichern" class="btn-default btn" name="form[speichern]" type="submit">Speichern</button>
                    </div>
                </div>
                {{ form_widget(form._token) }}
            </div>
        </form>

        {% if app.request.headers.get('referer') is null %}
            <a href="{{ path('_default') }}" class="btn btn-default">
                zurück
            </a>
        {% else %}
            <a href="{{ app.request.headers.get('referer') }}" class="btn btn-default">
                zurück
            </a>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        // keep track of how many email fields have been rendered
        var emailCount = 1;

        jQuery(document).ready(function() {
            jQuery('#add-another-email').click(function(e) {
                e.preventDefault();

                var emailList = jQuery('#email-fields-list');

                // grab the prototype template
                var newWidget = emailList.attr('data-prototype');
                // replace the "__name__" used in the id and name of the prototype
                // with a number that's unique to your emails
                // end name attribute looks like name="contact[emails][2]"
                newWidget = newWidget.replace(/__name__/g, emailCount);
                emailCount++;

                // create a new list element and add it to the list
                var newLi = jQuery('<li></li>').html(newWidget);
                newLi.appendTo(emailList);
            });
        })
    </script>
{% endblock %}


